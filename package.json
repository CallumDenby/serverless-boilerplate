{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "A Lambda API boilerplate",
  "author": "Callum Denby",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "sls offline",
    "pack": "sls webpack",
    "deploy": "sls deploy",
    "test": "export NODE_ENV=test && jest",
    "lint": "tslint --fix",
    "lint:all": "npm run lint -- --project .",
    "format": "prettier --write",
    "format:all": "npm run format -- '**/*.ts'"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.15",
    "@types/bunyan": "1.8.5",
    "@types/jest": "23.3.9",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.2",
    "serverless": "1.33.2",
    "serverless-offline": "3.31.3",
    "serverless-webpack": "5.2.0",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6",
    "webpack": "4.26.1",
    "webpack-node-externals": "1.6.0"
  },
  "dependencies": {
    "bunyan": "1.8.12",
    "cowsay": "1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "tslint -c tslint.json --fix",
      "git add"
    ]
  }
}
